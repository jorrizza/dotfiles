#output * bg #002b36 solid_color

# Background image
output * bg ~/.config/sway/bg.jpg fill

# Window gaps
gaps inner 10

# Transparent terminals
for_window [app_id="foot"] opacity set 0.9

# Application fixes
no_focus [class="com-eteks-sweethome3d-SweetHome3D" instance="sun-awt-X11-XWindowPeer"]

# Keyboard nocaps
input type:keyboard xkb_options ctrl:nocaps

# Multimedia keys
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume 0 +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume 0 -5%
bindsym XF86AudioMute exec pactl set-sink-mute 0 toggle
bindsym XF86MonBrightnessUp exec brightnessctl s 10%+
bindsym XF86MonBrightnessDown exec brightnessctl s 10%-

# Screen capture
bindsym Print exec grim - | wl-copy
bindsym $mod+Print exec grim -g "$(slurp)" - | wl-copy
bindsym Control+Print exec grim $(xdg-user-dir PICTURES)/ps_$(date +"%Y%m%d%H%M%S").png
bindsym $mod+Control+Print exec grim -g "$(slurp)" $(xdg-user-dir PICTURES)/screenshot_$(date +"%Y%m%d%H%M%S").png
bindsym Control+Alt+Print exec screenrecorder

# Lock screen
bindsym $mod+Scroll_Lock exec swaylock -i ~/.config/sway/forbidden.png -s center -c 002b36

# xrdb
exec xrdb -load ~/.Xresources

# Desktop notifications
exec mako

# Output configuration
exec kanshi

# Terminal server
exec foot --server

# GTK settings
# https://github.com/swaywm/sway/wiki/GTK-3-settings-on-Wayland
set $gnome-schema org.gnome.desktop.interface
exec_always {
	gsettings set $gnome-schema gtk-theme 'Adwaita'
	gsettings set $gnome-schema icon-theme 'breeze-dark'
	gsettings set $gnome-schema cursor-theme 'DMZ-Black'
	gsettings set $gnome-schema font-name 'Terminus 8'
}

