style "sbstyle" = "default"
{
    xthickness = 2
    ythickness = 2
    engine "xfce" 
    {
        smooth_edge = true
        grip_style = none
        boxfill
        {
            fill_style = gradient
            orientation = automatic
            shade_start = 1.25
            shade_end = 1.00
        }
    }
}
widget_class "*Scrollbar*"         style "sbstyle"
class "*Scrollbar*"                style "sbstyle"
widget_class "*GtkScale*"          style "sbstyle"
class "*GtkScale*"                 style "sbstyle"

style "progress" = "default"
{
    xthickness = 2
    ythickness = 2
}
widget_class "*GtkProgress*"       style "progress" 
class "*GtkProgress*"              style "progress" 

style "menuitem" = "default"
{
    xthickness = 1
    ythickness = 2
}

widget_class "*MenuItem*"          style "menuitem"
class "*MenuItem*"                 style "menuitem"

style "flat" = "default"
{
    xthickness = 2
    ythickness = 2
}
widget_class "*HandleBox"         style "flat"

